{
  "manifest_version": 3,
  "name": "linkedin finder+connect",
  "short_name": "Auto-Note+",
  "version": "2.1",
  "description": "Auto-connects with personalized templates + finds hiring teams across LinkedIn, Greenhouse, Ashby, Wellfound, Lever, Workable, and Workday job postings!",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "activeTab", "alarms", "downloads"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://boards.greenhouse.io/*",
    "https://*.greenhouse.io/*",
    "https://jobs.ashbyhq.com/*",
    "https://*.ashbyhq.com/*",
    "https://wellfound.com/*",
    "https://angel.co/*",
    "https://jobs.lever.co/*",
    "https://*.lever.co/*",
    "https://apply.workable.com/*",
    "https://*.workable.com/*",
    "https://*.myworkdayjobs.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline';"
  },
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/in/*",
        "https://www.linkedin.com/search/results/people/*",
        "https://www.linkedin.com/mynetwork/*",
        "https://www.linkedin.com/messaging/*",
        "https://www.linkedin.com/jobs/view/*",
        "https://www.linkedin.com/jobs/search/*",
        "https://boards.greenhouse.io/*/*",
        "https://*.greenhouse.io/*/*",
        "https://jobs.ashbyhq.com/*/*",
        "https://*.ashbyhq.com/*/*",
        "https://wellfound.com/*/*",
        "https://angel.co/*/*",
        "https://jobs.lever.co/*/*",
        "https://*.lever.co/*/*",
        "https://apply.workable.com/*/*",
        "https://*.workable.com/*/*",
        "https://*.myworkdayjobs.com/*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "action": { 
    "default_title": "Auto-Note Connect", 
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "open-note": {
      "suggested_key": { "default": "Ctrl+Shift+N", "mac": "Command+Shift+N" },
      "description": "Open Add a note and insert template"
    },
    "open-message": {
      "suggested_key": { "default": "Ctrl+Shift+M", "mac": "Command+Shift+M" },
      "description": "Open Message composer and insert template"
    },
    "open-hiring-finder": {
      "suggested_key": { "default": "Ctrl+Shift+H", "mac": "Command+Shift+H" },
      "description": "Open Hiring Team Finder on job postings"
    }
  }
}